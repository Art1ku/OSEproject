<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20"
      xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="group.survey.controllers.MainMenuController"
      style="-fx-background-color: #a8d1ed;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox spacing="10">
        <Label text="Survey"
               style="-fx-font-size:26px; -fx-font-weight:bold; -fx-text-fill:#2c3e50;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="+ Create"
                onAction="#openSurveyCreator"
                style="-fx-background-color:#3498db; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:5;"/>
    </HBox>

    <!-- Dynamic surveys list -->
    <VBox fx:id="surveysBox" spacing="12"/>

    <Button text="View History"
            onAction="#openHistory"
            style="-fx-background-color:#34495e; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:5;"/>

</VBox>
