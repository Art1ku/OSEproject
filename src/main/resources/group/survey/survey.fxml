<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="group.survey.controllers.SurveyController"
      style="-fx-background-color:#f0f4f7;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="progressLabel"
           style="-fx-font-size:16px; -fx-text-fill:#2c3e50;"/>

    <Label fx:id="questionLabel"
           style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:#34495e;"/>

    <VBox fx:id="optionsBox" spacing="10"/>

    <Button text="Next" onAction="#next"
            style="-fx-background-color:#3498db; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:5;"/>
</VBox>
